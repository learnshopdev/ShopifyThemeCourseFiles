<hr class="border-secondary border-opacity-25 my-4" />
<div class="footer-bottom d-flex flex-wrap justify-content-between small text-secondary">
  <span>© {{ 'now' | date: '%Y' }} {{ section.settings.company }}</span>
  <div class="d-flex gap-3">
    <a href="{{ section.settings.privacy_page.url }}">{{ section.settings.privacy_label }}</a>
    <a href="{{ section.settings.terms_page.url }}">{{ section.settings.terms_label }}</a>
  </div>
</div>

{% schema %}
{
  "name": "Footer — Bottom",
  "settings": [
    {
      "type": "text",
      "id": "company",
      "label": "Company name",
      "default": "Cupcake Cloud"
    },
    {
      "type": "page",
      "id": "privacy_page",
      "label": "Privacy policy page"
    },
    {
      "type": "text",
      "id": "privacy_label",
      "label": "Privacy link label",
      "default": "Privacy"
    },
    {
      "type": "page",
      "id": "terms_page",
      "label": "Terms of service page"
    },
    {
      "type": "text",
      "id": "terms_label",
      "label": "Terms link label",
      "default": "Terms"
    }
  ]
}
{% endschema %}
