<div class="col-6 col-md-2">
  <h6 class="text-uppercase text-secondary">{{ section.settings.heading }}</h6>
  <ul class="list-unstyled small">
    {% for link in section.settings.menu.links %}
      <li><a href="{{ link.url }}">{{ link.title }}</a></li>
    {% endfor %}
  </ul>
</div>

