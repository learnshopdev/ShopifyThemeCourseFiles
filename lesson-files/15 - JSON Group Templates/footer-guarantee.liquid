<div class="col-md-4">
  <h6 class="text-uppercase text-secondary">{{ section.settings.heading }}</h6>
  <p class="small">{{ section.settings.body }}</p>
</div>

{% schema %}
{
  "name": "Footer — Guarantee",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Guarantee"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Text",
      "default": "If you don’t love it, we’ll make it right. That’s our Sprinkle-Happy Guarantee."
    }
  ]
}
{% endschema %}